<Window x:Class="WpfApp9.WorkConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подтверждение работ" Height="500" Width="900" 
        WindowStartupLocation="CenterOwner">
    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок окна -->
        <TextBlock Grid.Row="0" Text="Подтверждение выполненных работ" 
                   FontSize="22" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,15,0,10"/>

        <!-- Подсказка для менеджера -->
        <TextBlock Grid.Row="1" 
                   Text="Здесь отображаются работы, отмеченные стажерами как выполненные." 
                   FontSize="12" Foreground="#666666"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- DataGrid для отображения записей -->
        <DataGrid x:Name="ConfirmationDataGrid" 
                  Grid.Row="2"
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Margin="15,0,15,15"
                  Background="White"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Подтверждено" Binding="{Binding isAdmindone}" Width="100"/>
                <DataGridCheckBoxColumn Header="Выполнено" Binding="{Binding Isdone}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Оборудование" Binding="{Binding EquipmentName}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Сотрудник" Binding="{Binding EmployeeName}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding MovementDate}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="60" IsReadOnly="True"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding MovementType}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Примечания" Binding="{Binding Notes}" Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Button Content="Сохранить" Click="SaveConfirmationsButton_Click" 
                    Width="120" Height="35" Margin="0,0,10,0"
                    Background="#4CAF50" Foreground="White"/>
            <Button Content="Обновить" Click="RefreshButton_Click" 
                    Width="100" Height="35" Margin="0,0,10,0"
                    Background="#FF9800" Foreground="White"/>
            <Button Content="Закрыть" Click="CloseButton_Click" 
                    Width="100" Height="35"
                    Background="#2196F3" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
