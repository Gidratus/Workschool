<Window x:Class="WpfApp9.WorkConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp9"
        mc:Ignorable="d"
        Title="Подтверждение работ" Height="500" Width="900" 
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок окна -->
        <TextBlock Grid.Row="0" Text="Подтверждение выполненных работ" 
                   FontSize="22" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,15,0,10"/>

        <!-- Подсказка для менеджера -->
        <TextBlock Grid.Row="1" 
                   Text="Здесь отображаются работы, отмеченные стажерами как выполненные. Подтвердите работы, которые были проверены." 
                   FontSize="12" Foreground="#666666"
                   HorizontalAlignment="Center" Margin="0,0,0,10"
                   TextWrapping="Wrap"/>

        <!-- DataGrid для отображения записей, отмеченных как выполненные -->
        <DataGrid x:Name="ConfirmationDataGrid" 
                  Grid.Row="2"
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Margin="15,0,15,15"
                  Background="White"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <!-- Чекбокс подтверждения менеджером/админом (редактируемый) -->
                <DataGridCheckBoxColumn Header="Подтверждено" Binding="{Binding isAdmindone, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                <!-- Статус от стажера (только чтение) -->
                <DataGridCheckBoxColumn Header="Отмечено стажером" Binding="{Binding Isdone}" Width="120" IsReadOnly="True"/>
                <!-- Название оборудования (только чтение) -->
                <DataGridTextColumn Header="Оборудование" Binding="{Binding EquipmentName}" Width="*" IsReadOnly="True"/>
                <!-- Сотрудник, выполнивший работу -->
                <DataGridTextColumn Header="Сотрудник" Binding="{Binding EmployeeName}" Width="120" IsReadOnly="True"/>
                <!-- Дата движения (только чтение) -->
                <DataGridTextColumn Header="Дата" Binding="{Binding MovementDate, StringFormat='{}{0:dd.MM.yyyy}'}" Width="90" IsReadOnly="True"/>
                <!-- Количество (только чтение) -->
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="60" IsReadOnly="True"/>
                <!-- Тип движения (только чтение) -->
                <DataGridTextColumn Header="Тип движения" Binding="{Binding MovementType}" Width="100" IsReadOnly="True"/>
                <!-- Примечания (только чтение) -->
                <DataGridTextColumn Header="Примечания" Binding="{Binding Notes}" Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель с кнопками внизу -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <!-- Кнопка сохранения подтверждений -->
            <Button Content="Сохранить подтверждения" Click="SaveConfirmationsButton_Click" 
                    Width="180" Height="35" FontSize="14" Margin="0,0,10,0"
                    Background="#4CAF50" Foreground="White" BorderThickness="0"/>
            <!-- Кнопка обновления списка -->
            <Button Content="Обновить" Click="RefreshButton_Click" 
                    Width="100" Height="35" FontSize="14" Margin="0,0,10,0"
                    Background="#FF9800" Foreground="White" BorderThickness="0"/>
            <!-- Кнопка закрытия окна -->
            <Button Content="Закрыть" Click="CloseButton_Click" 
                    Width="100" Height="35" FontSize="14"
                    Background="#2196F3" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
