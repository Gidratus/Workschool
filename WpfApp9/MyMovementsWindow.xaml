<Window x:Class="WpfApp9.MyMovementsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp9"
        mc:Ignorable="d"
        Title="Мои записи" Height="450" Width="800" 
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Мои записи движений оборудования" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,15,0,15"/>

        <!-- DataGrid для отображения записей -->
        <DataGrid x:Name="MovementsDataGrid" 
                  Grid.Row="1"
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Margin="15,0,15,15"
                  Background="White"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <!-- Чекбокс выполнения задачи (редактируемый) -->
                <DataGridCheckBoxColumn Header="Выполнено" Binding="{Binding Isdone, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                <!-- Название оборудования (только чтение) -->
                <DataGridTextColumn Header="Оборудование" Binding="{Binding EquipmentName}" Width="*" IsReadOnly="True"/>
                <!-- Дата движения (только чтение) -->
                <DataGridTextColumn Header="Дата" Binding="{Binding MovementDate, StringFormat='{}{0:dd.MM.yyyy}'}" Width="100" IsReadOnly="True"/>
                <!-- Количество (только чтение) -->
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="70" IsReadOnly="True"/>
                <!-- Тип движения (только чтение) -->
                <DataGridTextColumn Header="Тип движения" Binding="{Binding MovementType}" Width="120" IsReadOnly="True"/>
                <!-- Поставщик (только чтение) -->
                <DataGridTextColumn Header="Поставщик" Binding="{Binding SupplierName}" Width="150" IsReadOnly="True"/>
                <!-- Примечания (только чтение) -->
                <DataGridTextColumn Header="Примечания" Binding="{Binding Notes}" Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель с кнопками -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Button Content="Сохранить" Click="SaveButton_Click" 
                    Width="100" Height="35" FontSize="14" Margin="0,0,10,0"
                    Background="#4CAF50" Foreground="White" BorderThickness="0"/>
            <Button Content="Закрыть" Click="CloseButton_Click" 
                    Width="100" Height="35" FontSize="14"
                    Background="#2196F3" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>

