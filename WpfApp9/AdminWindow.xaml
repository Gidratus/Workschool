<Window x:Class="WpfApp9.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp9"
        mc:Ignorable="d"
        Title="Административная Панель" Height="600" Width="900">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" 
                   Text="Административная Панель" FontSize="24" FontWeight="Bold"
                   VerticalAlignment="Top" Height="40"/>

        <TabControl Margin="20,70,20,20">
            <TabItem Header="Управление Категориями" FontSize="14">
                <Grid Background="#FFF5F5F5">
                    <DataGrid x:Name="CategoriesDataGrid" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Margin="10,10,320,10"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionChanged="CategoriesDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding CategoryID}" Width="60"/>
                            <DataGridTextColumn Header="Название Категории" Binding="{Binding CategoryName}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White"
                            Margin="0,10,10,10" Width="300" HorizontalAlignment="Right">
                        <StackPanel Margin="15">
                            <TextBlock Text="Редактирование Категории" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,15"/>


                            <TextBlock Text="ID:" Margin="0,5,0,3"/>
                            <TextBox x:Name="CategoryIdTextBox" IsReadOnly="True" 
                                     Background="#F0F0F0" Height="25" Margin="0,0,0,10"/>


                            <TextBlock Text="Название Категории:" Margin="0,5,0,3"/>
                            <TextBox x:Name="CategoryNameTextBox" Height="25" Margin="0,0,0,15"/>


                            <Button Content="Добавить" Click="AddButton_Click" 
                                    Height="35" Margin="0,5" FontSize="14"
                                    Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                            
                            <Button Content="Обновить" Click="UpdateButton_Click" 
                                    Height="35" Margin="0,5" FontSize="14"
                                    Background="#2196F3" Foreground="White" BorderThickness="0"/>
                            
                            <Button Content="Удалить" Click="DeleteButton_Click" 
                                    Height="35" Margin="0,5" FontSize="14"
                                    Background="#f44336" Foreground="White" BorderThickness="0"/>
                            
                            <Button Content="Очистить поля" Click="ClearButton_Click" 
                                    Height="35" Margin="0,15,0,5" FontSize="14"
                                    Background="#9E9E9E" Foreground="White" BorderThickness="0"/>
                            
                            <Button Content="Обновить список" Click="RefreshButton_Click" 
                                    Height="35" Margin="0,5" FontSize="14"
                                    Background="#FF9800" Foreground="White" BorderThickness="0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem x:Name="EmployeesTabItem" Header="Управление Сотрудниками" FontSize="14">
                <Grid Background="#FFF5F5F5">
                    <DataGrid x:Name="EmployeesDataGrid" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Margin="10,10,400,10"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionChanged="EmployeesDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding EmployeeID}" Width="50"/>
                            <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="120"/>
                            <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="120"/>
                            <DataGridTextColumn Header="Должность" Binding="{Binding Position}" Width="150"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White"
                            Margin="0,10,10,10" Width="380" HorizontalAlignment="Right">
                        <StackPanel Margin="15">
                            <TextBlock Text="Редактирование Сотрудника" FontSize="16" FontWeight="Bold" 
                                       Margin="0,0,0,15"/>

                            <TextBlock Text="ID:" Margin="0,5,0,3"/>
                            <TextBox x:Name="EmployeeIdTextBox" IsReadOnly="True" 
                                     Background="#F0F0F0" Height="25" Margin="0,0,0,10"/>

                            <TextBlock Text="Имя:" Margin="0,5,0,3"/>
                            <TextBox x:Name="EmployeeFirstNameTextBox" Height="25" Margin="0,0,0,10"/>

                            <TextBlock Text="Фамилия:" Margin="0,5,0,3"/>
                            <TextBox x:Name="EmployeeLastNameTextBox" Height="25" Margin="0,0,0,10"/>

                            <TextBlock Text="Должность:" Margin="0,5,0,3"/>
                            <TextBox x:Name="EmployeePositionTextBox" Height="25" Margin="0,0,0,10"/>

                            <TextBlock Text="Email:" Margin="0,5,0,3"/>
                            <TextBox x:Name="EmployeeEmailTextBox" Height="25" Margin="0,0,0,10"/>

                            <TextBlock Text="Телефон:" Margin="0,5,0,3"/>
                            <TextBox x:Name="EmployeePhoneTextBox" Height="25" Margin="0,0,0,10"/>

                            <TextBlock Text="Пароль:" Margin="0,5,0,3"/>
                            <TextBox x:Name="EmployeePasswordTextBox" Height="25" Margin="0,0,0,15"/>

                            <Button Content="Добавить" Click="AddEmployeeButton_Click" 
                                    Height="35" Margin="0,5" FontSize="14"
                                    Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                            
                            <Button Content="Обновить" Click="UpdateEmployeeButton_Click" 
                                    Height="35" Margin="0,5" FontSize="14"
                                    Background="#2196F3" Foreground="White" BorderThickness="0"/>
                            
                            <Button Content="Удалить" Click="DeleteEmployeeButton_Click" 
                                    Height="35" Margin="0,5" FontSize="14"
                                    Background="#f44336" Foreground="White" BorderThickness="0"/>
                            
                            <Button Content="Очистить поля" Click="ClearEmployeeButton_Click" 
                                    Height="35" Margin="0,5" FontSize="14"
                                    Background="#9E9E9E" Foreground="White" BorderThickness="0"/>
                            
                            <Button Content="Обновить список" Click="RefreshEmployeeButton_Click" 
                                    Height="35" Margin="0,5" FontSize="14"
                                    Background="#FF9800" Foreground="White" BorderThickness="0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Другие настройки" FontSize="14">
                <Grid Background="#FFF5F5F5">
                    <TextBlock Text="Дополнительные административные функции будут добавлены здесь" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="16" Foreground="#888888"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
