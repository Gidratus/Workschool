<Window x:Class="WpfApp9.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp9"
        mc:Ignorable="d"
        Title="Административная Панель" Height="600" Width="900">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" 
                   Text="Панель управления" FontSize="24" FontWeight="Bold"
                   VerticalAlignment="Top" Height="40"/>

        <TabControl Margin="20,70,20,20">
            <TabItem Header="Управление Категориями" FontSize="14">
                <Grid Background="#FFF5F5F5">
                    <DataGrid x:Name="CategoriesDataGrid" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Margin="10,10,320,10"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionChanged="CategoriesDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding CategoryID}" Width="60"/>
                            <DataGridTextColumn Header="Название Категории" Binding="{Binding CategoryName}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Панель редактирования категории с поддержкой скроллинга -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White"
                            Margin="0,10,10,10" Width="300" HorizontalAlignment="Right">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="15">
                                <TextBlock Text="Редактирование Категории" FontSize="16" FontWeight="Bold" 
                                           Margin="0,0,0,15"/>

                                <!-- Поле ID (только для чтения) -->
                                <TextBlock Text="ID:" Margin="0,5,0,3"/>
                                <TextBox x:Name="CategoryIdTextBox" IsReadOnly="True" 
                                         Background="#F0F0F0" Height="25" Margin="0,0,0,10"/>

                                <!-- Поле названия категории -->
                                <TextBlock Text="Название Категории:" Margin="0,5,0,3"/>
                                <TextBox x:Name="CategoryNameTextBox" Height="25" Margin="0,0,0,15"/>

                                <!-- Кнопки управления -->
                                <Button Content="Добавить" Click="AddButton_Click" 
                                        Height="35" Margin="0,5" FontSize="14"
                                        Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                                
                                <Button Content="Обновить" Click="UpdateButton_Click" 
                                        Height="35" Margin="0,5" FontSize="14"
                                        Background="#2196F3" Foreground="White" BorderThickness="0"/>
                                
                                <Button Content="Удалить" Click="DeleteButton_Click" 
                                        Height="35" Margin="0,5" FontSize="14"
                                        Background="#f44336" Foreground="White" BorderThickness="0"/>
                                
                                <Button Content="Очистить поля" Click="ClearButton_Click" 
                                        Height="35" Margin="0,15,0,5" FontSize="14"
                                        Background="#9E9E9E" Foreground="White" BorderThickness="0"/>
                                
                                <Button Content="Обновить список" Click="RefreshButton_Click" 
                                        Height="35" Margin="0,5" FontSize="14"
                                        Background="#FF9800" Foreground="White" BorderThickness="0"/>
                                
                                <!-- Кнопка для сохранения отчета в Word -->
                                <Button Content="Сохранить Word" Click="SaveCategoriesWordButton_Click" 
                                        Height="35" Margin="0,15,0,5" FontSize="14"
                                        Background="#1565C0" Foreground="White" BorderThickness="0"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem x:Name="EmployeesTabItem" Header="Управление Сотрудниками" FontSize="14">
                <Grid Background="#FFF5F5F5">
                    <DataGrid x:Name="EmployeesDataGrid" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Margin="10,10,400,10"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionChanged="EmployeesDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding EmployeeID}" Width="50"/>
                            <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="120"/>
                            <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="120"/>
                            <DataGridTextColumn Header="Должность" Binding="{Binding Position}" Width="150"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Панель редактирования сотрудника с поддержкой скроллинга -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White"
                            Margin="0,10,10,10" Width="380" HorizontalAlignment="Right">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="15">
                                <TextBlock Text="Редактирование Сотрудника" FontSize="16" FontWeight="Bold" 
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="ID:" Margin="0,5,0,3"/>
                                <TextBox x:Name="EmployeeIdTextBox" IsReadOnly="True" 
                                         Background="#F0F0F0" Height="25" Margin="0,0,0,10"/>

                                <TextBlock Text="Имя:" Margin="0,5,0,3"/>
                                <TextBox x:Name="EmployeeFirstNameTextBox" Height="25" Margin="0,0,0,10"/>

                                <TextBlock Text="Фамилия:" Margin="0,5,0,3"/>
                                <TextBox x:Name="EmployeeLastNameTextBox" Height="25" Margin="0,0,0,10"/>

                                <TextBlock Text="Должность:" Margin="0,5,0,3"/>
                                <TextBox x:Name="EmployeePositionTextBox" Height="25" Margin="0,0,0,10"/>

                                <TextBlock Text="Email:" Margin="0,5,0,3"/>
                                <TextBox x:Name="EmployeeEmailTextBox" Height="25" Margin="0,0,0,10"/>

                                <TextBlock Text="Телефон:" Margin="0,5,0,3"/>
                                <TextBox x:Name="EmployeePhoneTextBox" Height="25" Margin="0,0,0,10"/>

                                <TextBlock Text="Пароль:" Margin="0,5,0,3"/>
                                <TextBox x:Name="EmployeePasswordTextBox" Height="25" Margin="0,0,0,15"/>

                                <Button Content="Добавить" Click="AddEmployeeButton_Click" 
                                        Height="35" Margin="0,5" FontSize="14"
                                        Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                                
                                <Button Content="Обновить" Click="UpdateEmployeeButton_Click" 
                                        Height="35" Margin="0,5" FontSize="14"
                                        Background="#2196F3" Foreground="White" BorderThickness="0"/>
                                
                                <Button Content="Удалить" Click="DeleteEmployeeButton_Click" 
                                        Height="35" Margin="0,5" FontSize="14"
                                        Background="#f44336" Foreground="White" BorderThickness="0"/>
                                
                                <Button Content="Очистить поля" Click="ClearEmployeeButton_Click" 
                                        Height="35" Margin="0,5" FontSize="14"
                                        Background="#9E9E9E" Foreground="White" BorderThickness="0"/>
                                
                                <Button Content="Обновить список" Click="RefreshEmployeeButton_Click" 
                                        Height="35" Margin="0,5" FontSize="14"
                                        Background="#FF9800" Foreground="White" BorderThickness="0"/>
                                
                                <!-- Кнопка для сохранения отчета в Word -->
                                <Button Content="Сохранить Word" Click="SaveEmployeesWordButton_Click" 
                                        Height="35" Margin="0,15,0,5" FontSize="14"
                                        Background="#1565C0" Foreground="White" BorderThickness="0"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Вкладка для управления оборудованием -->
            <TabItem Header="Управление Equipment" FontSize="14">
                <Grid Background="#FFF5F5F5">
                    <!-- Таблица с оборудованием -->
                    <DataGrid x:Name="EquipmentDataGrid" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Margin="10,10,380,10"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionChanged="EquipmentDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding EquipmentID}" Width="40"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding EquipmentName}" Width="120"/>
                            <DataGridTextColumn Header="Категория" Binding="{Binding CategoryID}" Width="70"/>
                            <DataGridTextColumn Header="Производитель" Binding="{Binding Manufacturer}" Width="100"/>
                            <DataGridTextColumn Header="Модель" Binding="{Binding Model}" Width="80"/>
                            <DataGridTextColumn Header="Серийный №" Binding="{Binding SerialNumber}" Width="100"/>
                            <DataGridTextColumn Header="Дата покупки" Binding="{Binding PurchaseDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="90"/>
                            <DataGridTextColumn Header="Гарантия до" Binding="{Binding WarrantyUntil, StringFormat=\{0:dd.MM.yyyy\}}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Панель редактирования оборудования -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White"
                            Margin="0,10,10,10" Width="360" HorizontalAlignment="Right">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="15">
                                <TextBlock Text="Редактирование Equipment" FontSize="16" FontWeight="Bold" 
                                           Margin="0,0,0,15"/>

                                <!-- Поле ID (только для чтения) -->
                                <TextBlock Text="ID:" Margin="0,5,0,3"/>
                                <TextBox x:Name="EquipmentIdTextBox" IsReadOnly="True" 
                                         Background="#F0F0F0" Height="25" Margin="0,0,0,8"/>

                                <!-- Поле названия оборудования -->
                                <TextBlock Text="Название оборудования:" Margin="0,5,0,3"/>
                                <TextBox x:Name="EquipmentNameTextBox" Height="25" Margin="0,0,0,8"/>

                                <!-- Поле категории - выпадающий список -->
                                <TextBlock Text="Категория:" Margin="0,5,0,3"/>
                                <ComboBox x:Name="EquipmentCategoryComboBox" Height="25" Margin="0,0,0,8"
                                          DisplayMemberPath="CategoryName" SelectedValuePath="CategoryID"/>

                                <!-- Поле производителя -->
                                <TextBlock Text="Производитель:" Margin="0,5,0,3"/>
                                <TextBox x:Name="EquipmentManufacturerTextBox" Height="25" Margin="0,0,0,8"/>

                                <!-- Поле модели -->
                                <TextBlock Text="Модель:" Margin="0,5,0,3"/>
                                <TextBox x:Name="EquipmentModelTextBox" Height="25" Margin="0,0,0,8"/>

                                <!-- Поле серийного номера -->
                                <TextBlock Text="Серийный номер:" Margin="0,5,0,3"/>
                                <TextBox x:Name="EquipmentSerialNumberTextBox" Height="25" Margin="0,0,0,8"/>

                                <!-- Поле даты покупки -->
                                <TextBlock Text="Дата покупки:" Margin="0,5,0,3"/>
                                <DatePicker x:Name="EquipmentPurchaseDatePicker" Height="25" Margin="0,0,0,8"/>

                                <!-- Поле гарантии -->
                                <TextBlock Text="Гарантия до:" Margin="0,5,0,3"/>
                                <DatePicker x:Name="EquipmentWarrantyUntilPicker" Height="25" Margin="0,0,0,15"/>

                                <!-- Кнопки управления -->
                                <Button Content="Добавить" Click="AddEquipmentButton_Click" 
                                        Height="35" Margin="0,5" FontSize="14"
                                        Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                                
                                <Button Content="Обновить" Click="UpdateEquipmentButton_Click" 
                                        Height="35" Margin="0,5" FontSize="14"
                                        Background="#2196F3" Foreground="White" BorderThickness="0"/>
                                
                                <Button Content="Удалить" Click="DeleteEquipmentButton_Click" 
                                        Height="35" Margin="0,5" FontSize="14"
                                        Background="#f44336" Foreground="White" BorderThickness="0"/>
                                
                                <Button Content="Очистить поля" Click="ClearEquipmentButton_Click" 
                                        Height="35" Margin="0,15,0,5" FontSize="14"
                                        Background="#9E9E9E" Foreground="White" BorderThickness="0"/>
                                
                                <Button Content="Обновить список" Click="RefreshEquipmentButton_Click" 
                                        Height="35" Margin="0,5" FontSize="14"
                                        Background="#FF9800" Foreground="White" BorderThickness="0"/>
                                
                                <!-- Кнопка для сохранения отчета в Word -->
                                <Button Content="Сохранить Word" Click="SaveEquipmentWordButton_Click" 
                                        Height="35" Margin="0,15,0,5" FontSize="14"
                                        Background="#1565C0" Foreground="White" BorderThickness="0"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Вкладка для управления движениями оборудования -->
            <TabItem Header="Движения оборудования" FontSize="14">
                <Grid Background="#FFF5F5F5">
                    <!-- Таблица с движениями оборудования -->
                    <DataGrid x:Name="MovementDataGrid" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Margin="10,10,380,10"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionChanged="MovementDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding MovementID}" Width="40"/>
                            <DataGridTextColumn Header="Оборудование" Binding="{Binding EquipmentName}" Width="120"/>
                            <DataGridTextColumn Header="Дата" Binding="{Binding MovementDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="90"/>
                            <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="60"/>
                            <DataGridTextColumn Header="Тип движения" Binding="{Binding MovementType}" Width="100"/>
                            <DataGridTextColumn Header="Поставщик" Binding="{Binding SupplierName}" Width="100"/>
                            <DataGridTextColumn Header="Сотрудник" Binding="{Binding EmployeeName}" Width="100"/>
                            <DataGridTextColumn Header="Примечания" Binding="{Binding Notes}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Панель редактирования движений -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White"
                            Margin="0,10,10,10" Width="360" HorizontalAlignment="Right">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="15">
                                <TextBlock Text="Редактирование движения" FontSize="16" FontWeight="Bold" 
                                           Margin="0,0,0,15"/>

                                <!-- Поле ID (только для чтения) -->
                                <TextBlock Text="ID:" Margin="0,5,0,3"/>
                                <TextBox x:Name="MovementIdTextBox" IsReadOnly="True" 
                                         Background="#F0F0F0" Height="25" Margin="0,0,0,8"/>

                                <!-- Выбор оборудования -->
                                <TextBlock Text="Оборудование:" Margin="0,5,0,3"/>
                                <ComboBox x:Name="MovementEquipmentComboBox" Height="25" Margin="0,0,0,8"
                                          DisplayMemberPath="EquipmentName" SelectedValuePath="EquipmentID"/>

                                <!-- Дата движения -->
                                <TextBlock Text="Дата движения:" Margin="0,5,0,3"/>
                                <DatePicker x:Name="MovementDatePicker" Height="25" Margin="0,0,0,8"/>

                                <!-- Количество -->
                                <TextBlock Text="Количество:" Margin="0,5,0,3"/>
                                <TextBox x:Name="MovementQuantityTextBox" Height="25" Margin="0,0,0,8"/>

                                <!-- Тип движения (IN - поступление, OUT - списание) -->
                                <TextBlock Text="Тип движения:" Margin="0,5,0,3"/>
                                <ComboBox x:Name="MovementTypeComboBox" Height="25" Margin="0,0,0,8">
                                    <ComboBoxItem Content="IN"/>
                                    <ComboBoxItem Content="OUT"/>
                                </ComboBox>

                                <!-- Выбор поставщика -->
                                <TextBlock Text="Поставщик:" Margin="0,5,0,3"/>
                                <ComboBox x:Name="MovementSupplierComboBox" Height="25" Margin="0,0,0,8"
                                          DisplayMemberPath="SupplierName" SelectedValuePath="SupplierID"/>

                                <!-- Выбор сотрудника -->
                                <TextBlock Text="Сотрудник:" Margin="0,5,0,3"/>
                                <ComboBox x:Name="MovementEmployeeComboBox" Height="25" Margin="0,0,0,8"
                                          DisplayMemberPath="FullName" SelectedValuePath="EmployeeID"/>

                                <!-- Примечания -->
                                <TextBlock Text="Примечания:" Margin="0,5,0,3"/>
                                <TextBox x:Name="MovementNotesTextBox" Height="60" Margin="0,0,0,15"
                                         TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                                <!-- Кнопки управления -->
                                <Button Content="Добавить" Click="AddMovementButton_Click" 
                                        Height="35" Margin="0,5" FontSize="14"
                                        Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                                
                                <Button Content="Обновить" Click="UpdateMovementButton_Click" 
                                        Height="35" Margin="0,5" FontSize="14"
                                        Background="#2196F3" Foreground="White" BorderThickness="0"/>
                                
                                <Button Content="Удалить" Click="DeleteMovementButton_Click" 
                                        Height="35" Margin="0,5" FontSize="14"
                                        Background="#f44336" Foreground="White" BorderThickness="0"/>
                                
                                <Button Content="Очистить поля" Click="ClearMovementButton_Click" 
                                        Height="35" Margin="0,15,0,5" FontSize="14"
                                        Background="#9E9E9E" Foreground="White" BorderThickness="0"/>
                                
                                <Button Content="Обновить список" Click="RefreshMovementButton_Click" 
                                        Height="35" Margin="0,5" FontSize="14"
                                        Background="#FF9800" Foreground="White" BorderThickness="0"/>
                                
                                <!-- Кнопка для сохранения отчета в Word -->
                                <Button Content="Сохранить Word" Click="SaveMovementsWordButton_Click" 
                                        Height="35" Margin="0,15,0,5" FontSize="14"
                                        Background="#1565C0" Foreground="White" BorderThickness="0"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Другие настройки" FontSize="14">
                <Grid Background="#FFF5F5F5">
                    <TextBlock Text="Дополнительные административные функции будут добавлены здесь" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="16" Foreground="#888888"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
